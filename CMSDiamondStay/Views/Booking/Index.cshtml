
@model PagedList.IPagedList<CMSDiamondStay.Models.Booking>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAparment.cshtml";

}
@if (TempData["message"] != null)
{
    if (TempData["message"] as string == "Create Success")
    {
        <p class="alert alert-success">@TempData["message"]</p>
    }
}
<div class="right_col">
    <div class="x_panel">
        <div class="x_content">



            <div class="clearfix"></div>
            <h3 style="text-align: center;">Danh sách căn hộ hiện có</h3>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 ">
                    <div class="x_panel">
                        <div class="x_content">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card-box table-responsive">


                                        <div class="row">
                                            <div class="col-md-2 col-lg-2 col-xs-2 col-sm-2 text-left">
                                                @using (Html.BeginForm("Index", "Apartment", FormMethod.Get))
                                                {
                                                    <p>
                                                        Kích thước trang: @Html.DropDownList("size", (List<SelectListItem>)ViewBag.size, new { @onchange = "this.form.submit();" })
                                                    </p>
                                                }
                                            </div>

                                            <div class="col-md-10 col-sm-10 col-xs-10 col-sm-10 input-group float-right">

                                                @using (Html.BeginForm("Index", "Apartment", FormMethod.Get))
                                                {

                                                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, null, new { @class = "", @placeholder = "Search for..." })
                                                    <span class="input-group-btn">
                                                        <input type="submit" value="Search" />
                                                    </span>

                                                }

                                            </div>

                                        </div>


                                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                    <th>User Id</th>
                                                    <th>User Name</th>
                                                    <th>Apartment Name</th>
                                                    <th>Apartment Type</th>
                                                    <th>Check In</th>
                                                    <th>Check Out</th>
                                                    <th>Amount</th>
                                                    <th> Image</th>

                                                    <th>Action</th>
                                                    <th>Deactive</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                <tr>
                                                    <td>@item.id</td>
                                                    <td>@item.user_name</td>
                                                    <td>@item.apartment_name</td>
                                                    <td>@item.apartment_type</td>
                                                    <td>@item.check_in</td>
                                                    <td>@item.check_out</td>
                                                    <td>@item.amount</td>
                                                    <td><img src="@item.apartment_thumb" alt="Girl in a jacket" width:auto height="130"></td>
                                                    <td>
                                                        <a href="#" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                                        <a href="#" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                                    </td>
                                                    <td>
                                                        <label class="switch">
                                                            <input type="checkbox" checked>
                                                            <span class="slider round"></span>
                                                        </label>
                                                    </td>
                                                </tr>
                                                }

                                            </tbody>
                                        </table>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>




            <div class="col-md-12 col-sm-12  text-center">

                @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page, size = ViewBag.currentSize, sortOrder = ViewBag.CurrentSort, SearchString = ViewBag.CurrentFilter }),
                    new PagedListRenderOptions()
                    {
                        LiElementClasses = new List<string> { "btn btn-success" }
                    }
                )



            </div>
            <div class="col-md-12 col-lg-12 col-xs-12 col-sm-12 text-right">
                Trang: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            </div>

        </div>
    </div>




</div>
