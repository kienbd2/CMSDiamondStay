
@model PagedList.IPagedList<CMSDiamondStay.Models.ApartmentsViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAparment.cshtml";

}
@if (TempData["message"] != null)
{
    if (TempData["message"] as string == "Create Success")
    {
        <p class="alert alert-success">@TempData["message"]</p>
    }
    else
    {
        <p class="alert alert-danger">@TempData["message"]</p>
    }

}
<div class="right_col" role="main">
    <div class="">
        <h3 style="text-align: center;">Danh sách căn hộ hiện có</h3>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">


                                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>Tên căn hộ</th>
                                                <th>Loại căn hộ</th>
                                                <th>Ghế Sofa</th>
                                                <th>Phòng ngủ</th>
                                                <th>Giá tiền</th>
                                                <th>Địa chỉ</th>
                                                <th> Image</th>
                                                <th>Fax</th>
                                                <th>Action</th>
                                                <th>Deactive</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.name</td>
                                                    <td>@item.type</td>
                                                    <td>@item.amount_sofa</td>
                                                    <td>@item.amount_bed</td>
                                                    <td>@item.price</td>
                                                    <td>@item.village_address+@item.district_address</td>
                                                    <td>@item.thumb</td>
                                                    <td>2360</td>
                                                    <td>
                                                        <a href="#" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                                        <a href="#" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                                    </td>
                                                    <td>
                                                        <label class="switch">
                                                            <input type="checkbox" checked>
                                                            <span class="slider round"></span>
                                                        </label>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
