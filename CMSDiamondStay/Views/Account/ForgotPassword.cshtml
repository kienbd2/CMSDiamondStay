@model CMSDiamondStay.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_LayoutForgetPassWord.cshtml";
}

@if (TempData["error"] != null)
{
    <p class="alert alert-danger">@TempData["error"]</p>
}
@if (TempData["message"] != null)
{
    <p class="alert alert-success">@TempData["message"]</p>
}
@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()


    <div class="forget-pass w3layouts agileits">
        <h3 style="color: #ccc; margin-bottom: 30px;">Vui lòng nhập địa chỉ email được liên kết với tài khoản Luxstay để nhận liên kết đặt lại mật khẩu</h3>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Nhập địa chỉ email được liên kết với tài khoản Luxstay để nhận liên kết đặt lại mật khẩu", @style = "width: 100%; height: 20px" })
        <br />
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>


    <div class="style w3layouts agileits">
        <form>
            <input class="ip-forget btn btn-primary" type="submit" value="Gửi">
        </form>
    </div>



}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {

            setTimeout(function () {
                if ($(".alert").is(":visible")) {
                    //you may add animate.css class for fancy fadeout
                    $(".alert").fadeOut("fast");
                }
            }, 2000)

        });
    </script>

    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>

}
